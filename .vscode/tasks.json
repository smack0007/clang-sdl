{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "build.cmd",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Game",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "shell",
      "command": "Game.exe",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "problemMatcher": []
    }
  ]
}
